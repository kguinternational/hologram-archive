{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hologram.docs.spec",
  "title": "Hologram Documentation Conformance",
  "description": "Defines documentation conformance for components",
  "type": "object",
  "namespace": "hologram.docs.spec",
  "parent": "hologram",
  "conformance": false,
  "version": "0.1.0",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "namespace": {
      "type": "string",
      "pattern": "^hologram(\\.[a-z][a-z0-9]*)*\\.docs$"
    },
    "parent": {
      "type": "string",
      "pattern": "^hologram(\\.[a-z][a-z0-9]*)*$"
    },
    "conformance": {
      "type": "boolean",
      "const": true
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string"
    },
    "docs": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "description": {
          "type": "string"
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "content": {
                "type": "string"
              }
            },
            "required": [
              "title",
              "content"
            ]
          }
        }
      },
      "required": [
        "version",
        "description",
        "sections"
      ]
    }
  },
  "required": [
    "namespace",
    "parent",
    "conformance",
    "version",
    "description",
    "docs"
  ]
}