{
  "namespace": "hologram.validate.log",
  "parent": "hologram.validate",
  "conformance": true,
  "version": "0.1.0",
  "description": "Log conformance for hologram.validate",
  "log": {
    "version": "0.1.0",
    "description": "Logging for hologram.validate",
    "levels": [
      "debug",
      "info",
      "warn",
      "error"
    ],
    "default_level": "info",
    "format": {
      "type": "json",
      "timestamp": "iso8601",
      "fields": {
        "required": [
          "timestamp",
          "level",
          "message"
        ],
        "optional": [
          "context"
        ],
        "metadata": {}
      }
    },
    "output": [
      {
        "type": "stderr",
        "config": {}
      }
    ]
  }
}