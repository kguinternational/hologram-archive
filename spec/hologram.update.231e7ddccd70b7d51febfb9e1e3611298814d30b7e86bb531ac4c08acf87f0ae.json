{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hologram.update.spec",
  "title": "Hologram Update Operation",
  "description": "Defines update operation for components",
  "type": "object",
  "namespace": "hologram.update.spec",
  "parent": "hologram",
  "conformance": false,
  "version": "0.1.0",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "namespace": {
      "type": "string",
      "const": "hologram.update"
    },
    "parent": {
      "type": "string",
      "const": "hologram"
    },
    "conformance": {
      "type": "boolean"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string"
    },
    "update": {
      "type": "object",
      "properties": {
        "operation": {
          "type": "object",
          "properties": {
            "input": {
              "type": "object",
              "properties": {
                "namespace": {
                  "type": "string"
                },
                "files": {
                  "type": "object"
                }
              },
              "required": [
                "namespace",
                "files"
              ]
            },
            "output": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "updatedFiles": {
                  "type": "array"
                }
              },
              "required": [
                "success"
              ]
            }
          },
          "required": [
            "input",
            "output"
          ]
        }
      },
      "required": [
        "operation"
      ]
    }
  },
  "required": [
    "namespace",
    "parent",
    "conformance",
    "version",
    "description",
    "update"
  ]
}