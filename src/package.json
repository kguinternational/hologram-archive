{
  "name": "@hologram/component-manager",
  "version": "0.1.0",
  "description": "Hologram Component Manager MCP Server",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --config jest.config.mjs",
    "test:coverage": "jest --config jest.config.mjs --coverage",
    "test:watch": "jest --config jest.config.mjs --watch",
    "mcp": "node dist/mcp-server.js",
    "validate": "node dist/cli-validate.js",
    "gc": "node dist/utils/gc.js",
    "gc:clean": "node dist/utils/gc.js --clean",
    "clean": "rm -rf dist coverage .artifacts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,json}\" --ignore-path .prettierignore",
    "pretest": "npm run build",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  }
}
